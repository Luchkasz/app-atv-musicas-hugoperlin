<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TableColumn?>

<VBox xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ifpr.pgua.eic.colecaomusicas.controllers.ListarPlaylists">
    <Text text="Listar Playlists" />
    <HBox>
        <Label text="Escolha uma Playlist:" />
        <ComboBox fx:id="cbPlaylist" />
        <Button text="Escolher" onAction="#escolher" />
    </HBox>
    <TableView fx:id="tbMusica">
        <columns>
            <TableColumn fx:id="tbcId" text="ID" />
            <TableColumn fx:id="tbcNome" text="Nome" />
            <TableColumn fx:id="tbcDuracao" text="Duração" />
            <TableColumn fx:id="tbcAnoLancamento" text="Ano de Lançamento" />
            <TableColumn fx:id="tbcArtista" text="Artista" />
            <TableColumn fx:id="tbcGenero" text="Gênero" />
        </columns>
    </TableView>
    <Button text="Voltar" onAction="#voltar" />
</VBox>